{
    "manifest_version": 2,
    "background": {
        "scripts": ["enhance.js", "background.js"],
        "persistant": false
    },
    "name": "Livejournal customization",
    "version": "0.2",
    "homepage_url": "https://github.com/can3p/ljcustomize",
    "description": "Tweaks for livejournal interface",
    "content_scripts": [
    {
        "matches": ["http://*/*"],
        "js": ["enhance.js", "client.js"],
        "css": ["enhance.css"],
        "run_at": "document_end"
    }
    ],
    "options_page": "options.html",
    "permissions": [ "http://*/*" ],
    "update_url": "http://clients2.google.com/service/update2/crx",
    "default_locale": "en",
    "icons": {
        "128": "icon.png",
        "source": "http://www.iconfinder.com/icondetails/82336/128/livejournal_icon"
    }
}
